#
# Einige aliase
#

alias la="ls -a"
alias lla="ls -lah"
alias l="ls"
alias ll='ls -lh'
alias cd..='cd ..'
alias ..='cd ..'

alias vi='vim'

alias top='htop'

alias mkdir='mkdir -p -v'

alias mv=' timeout 8 mv -iv'
alias rm=' timeout 3 rm -Iv --one-file-system'

alias df='df -h'
alias du='du -c -h'
alias nano='nano -w'
alias ping='ping -c 5'

## New commands ## {{{
alias da='date "+%A, %B %d, %Y [%T]"'
alias du1='du --max-depth=1'
