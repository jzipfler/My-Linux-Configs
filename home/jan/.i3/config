        status_command i3status -c ~/.i3/i3status_top.conf
        position top
        workspace_buttons true
#        output LVDS1
	#output DP-2
	output $primaryMonitor
  #output HDMI1
        tray_output $primaryMonitor
        colors {
                # colorclass            border   backgr.  text
                background              $black
                statusline              $lightBlue
                separator               $lightBlue
                focused_workspace       $turquioseBlue $turquioseBlue $black
                active_workspace        $darkTurquiose $darkTurquiose $lightGrey
                inactive_workspace      $darkTurquiose $black $lightGrey
                urgent_workspace        $darkRed $darkerRed $white
        }
}

