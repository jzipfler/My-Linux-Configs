# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status -c ~/.i3/i3status_top.conf
        position top
        workspace_buttons true
        output LVDS1
        output HDMI1
        output VGA1
        tray_output LVDS1
        colors {
                # colorclass            border   backgr.  text
                background              $color03
                statusline              $color11
                separator               $color12
                focused_workspace       $color01 $color04 $color03
                active_workspace        $color01 $color11 $color03
                inactive_workspace      $color12 $color03 $color07
                urgent_workspace        $color02 $color06 $color09
        }
}

bar {
        status_command py3status -c ~/.i3/i3status_bottom.conf
        position bottom
        workspace_buttons false
        output LVDS1
        output HDMI1
        output VGA1
